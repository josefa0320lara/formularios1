<h3 class="ml-5 p-4"> Listado de posts </h3>

<div class="card-deck ml-5 p-1">
    <div class="row">
        <div class="col-2">
            <% @posts.each do |post| %>
            <div class="card mb-5">
                <h4 class="lead ml-3 fs-4"> <%= post.title %>  </h4>
                <%= image_tag(post.image_url)  %>
                <div class="card-body">
                    <%= post.title %>
                    <p class="card-text"><%= post.content %></p>
                </div>
            </div>
        <% end %>
        </div>
    </div>
</div>
